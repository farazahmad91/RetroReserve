@model Entities.ForgotPasswordViewModel
<h2>Forgot Password</h2>

@if (ViewData["ErrorMessage"] != null)
{
    <div class="alert alert-danger" role="alert">
        @ViewData["ErrorMessage"]
    </div>
}

<form asp-controller="ForgotPassword" asp-action="ForgotPassword" method="post">
    <div class="form-group">
        <label for="email">Email Address</label>
        <input type="email" class="form-control" id="email" name="Email" value="@Model.Email" required>
        <small id="emailHelp" class="form-text text-muted">Enter the email address associated with your account.</small>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>


