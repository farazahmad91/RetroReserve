@model Entities.Coupan
@{
    ViewData["Title"] = "EditMenu";
    Layout = null;
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0">Add Coupan</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Offers</a></li>
                        <li class="breadcrumb-item active">Add Coupan</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
    <div class="container py-3">
        <div>
            <div class="card" id="snackbar">Data Saved Successfully</div>
            <div class="card" id="snackbar2">Data Updated Successfully</div>
            <div class="card" id="snackbar3">Deleted.</div>
        </div>
        <div class="card">
            <div class="card-header bg-info text-white">
                <h5 class="card-title text-uppercase"><Strong><i class="fas fa-hamburger"></i> Add Menu Info</Strong></h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Coupan Name</label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fa fa-user" style="font-size:23px;"></i></span>
                                </div>
                                <input type="text" asp-for="CoupanName" class="form-control" placeholder="Enter Coupan Name" />
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Valid Upto</label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fas fa-calendar-alt" style="font-size:23px;"></i></span>
                                </div>
                                <input type="date" asp-for="ValidUpto" class="form-control" />
                                <input type="hidden" asp-for="CoupanId" class="form-control" />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Description</label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fa fa-info-circle" style="font-size:23px;"></i></span>
                            </div>
                            <input type="text" asp-for="Description" class="form-control" placeholder="Enter Description" />
                        </div>
                    </div>
                </div>


                <br />
                <div class="form-group">
                    <div id="loader_spinner" style="display: none;" class="overlay-spinner"></div>
                    <button type="button" id="btninsertupdate" onclick="SaveOrUpdateCoupan();" class="btn btn-primary">Save</button>
                    <a href="/Coupan" class="btn btn-info float-right" style="text-align:right;">Back To List</a>
                </div>
            </div>
        </div>
    </div>
</div>
<div>
    <a href="Index">Back to List</a>
</div>


