@model IEnumerable<Entities.Employees>
@{
    ViewData["Title"] = "Chefs";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}


<div class="container-fluid page-header py-5">
    <h1 class="text-center text-white display-6">Chefs</h1>
    <ol class="breadcrumb justify-content-center mb-0">
        <li class="breadcrumb-item"><a href="#">Home</a></li>
        <li class="breadcrumb-item"><a href="#">Chefs</a></li>
    </ol>
</div>
<br />
<div class="col-lg-12">
    <div class="row g-4">
            @foreach (var item in Model)
            {
                <div class="col-md-6 col-lg-4 col-xl-3">
                    <div class="rounded position-relative fruite-item">
                        <div class="fruite-img">
                            <img src="@item.Image" class="img-fluid w-100 rounded-top" alt="" style="width:50%;height:230px;">
                        </div>
                        <div class="p-4 border border-secondary border-top-0 rounded-bottom">
                        <h4><strong>@item.Name</strong></h4>
                        <span class="text-white bg-secondary px-3 py-1 rounded">@item.RoleName</span>
                        </div>
                    </div>
                </div>
            }
            </div></div>

