@model IEnumerable<Entities.BookingTables>

@{
    var count = 0;
    string hide;
    ViewData["Title"] = "NewOrder";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>New Order Report</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Order</a></li>
                        <li class="breadcrumb-item active">New Orders</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>
    <div class="container">
        <div class="card">
        <div class="table-responsive">
        <table class="table table-striped">
            <thead style="background-color:#17a2b8!important;">
                <tr>
                    <th>Sr No:</th>
                    <th>
                        User Id
                    </th>
                    <th>
                        Table Id
                    </th>
                    <th>
                        Dish Name
                    </th>
                    <th>
                        Dish Image
                    </th>
                    <th>
                       Quantity
                    </th>
                    <th>
                        Order Date
                    </th>
                    <th>
                        Status
                    </th>
                </tr>
            </thead>
            <tbody>
                @if (Model == null || !Model.Any())
                            {
                                <tr style="text-align: center;">
                                    <td colspan="12" style="text-align: center;">
                                        <label><strong>Reacord Not Found</strong></label>
                                    </td>
                                </tr>
                            }
                            else
                            {
                @foreach (var item in Model)
                {

                    count++;
                    <tr>
                           <input type="text" hidden id="hdn_@item.OrderID"/>
                           <input type="text" hidden id="tableno" value="@item.TableId"/>
                            <input type="text" hidden id="Email" value="@item.Email"/>
                          <td>
                           @count
                        </td>
                        <td>
                         
                            @Html.DisplayFor(modelItem => item.UserId)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TableId)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DishName)
                        </td>
                        <td>
                            <img class="img-fluid rounded-circle" src="@item.DishImage" alt="Dishes" style="width:110px;height:70px;">
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DishQuantity)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.OrderDate)
                        </td>
                        <td>
                                        @{
                                            hide = "";
                                            string colorStyle = "";
                                            string classbadge = "";
                                            if (@item.Status == 0)
                                            {

                                                classbadge = "badge badge-warning";
                                            }
                                            else if (@item.Status == 1)
                                            {
                                                classbadge = "badge badge-primary";
                                }
                                 else if (@item.Status == 3)
                                {
                                  
                                    classbadge = "badge badge-info";
                                }
                                  else if (@item.Status == 4)
                                {
                                  
                                    classbadge = "badge badge-danger";
                                }
                                  else
                                {
                                    
                                      classbadge = "badge badge-primary";
                                }
                            }
                          <input type="datetime-local" hidden id="deliverdtime" />
                           <select id="payment" class="@classbadge" style="colorStyle" asp-for="@item.Status" onchange="UpdateOrderStatus(@item.OrderID,this.value);">
                                            @if (@item.Status == 0)
                                            {
                                                <option value="0" style="display: none;">Disapprove</option>
                                                <option value="1">Approved</option>
                                                <option value="2" style="display: none;">Prepared</option>
                                                <option value="3" style="display: none;">Wait</option>
                                                <option value="4" style="display: none;">Cancelled</option>
                                                <option value="5" style="display: none;">Delivered</option>
                                            }
                                            else if (@item.Status == 1)
                                            {
                                                <option value="0" style="display: none;">Disapprove</option>
                                                <option value="1" style="display: none;">Approved</option>
                                                <option value="2">Prepared</option>
                                                <option value="3" style="display: none;">Wait</option>
                                                <option value="4" style="display: none;">Cancelled</option>
                                                <option value="5" style="display: none;">Delivered</option>
                                            }
                                            else if (@item.Status == 2)
                                            {
                                                <option value="0" style="display: none;">Disapprove</option>
                                                <option value="1" style="display: none;">Approved</option>
                                                <option value="2" style="display: none;">Prepared</option>
                                                <option value="3">Wait</option>
                                                <option value="4">Cancelled</option>
                                                <option value="5">Delivered</option>
                                            }
                                            else if (@item.Status == 3)
                                            {
                                                <option value="0" style="display: none;">Disapprove</option>
                                                <option value="1" style="display: none;">Approved</option>
                                                <option value="2" style="display: none;">Prepared</option>
                                                <option value="3" style="display: none;">Wait</option>
                                                <option value="4">Cancelled</option>
                                                <option value="5">Delivered</option>
                                            }
                                            else if (@item.Status == 4)
                                            {
                                                <option value="0" style="display: none;">Disapprove</option>
                                                <option value="1" style="display: none;">Approved</option>
                                                <option value="2" style="display: none;">Prepared</option>
                                                <option value="3" style="display: none;">Wait</option>
                                                <option value="4">Cancelled</option>
                                                <option value="5" style="display: none;">Delivered</option>
                                            }
                           </select>
                        </td>
                    </tr>
                }}
            </tbody>
        </table>
          </div>
          </div>
    </div>
</div>
<script>
      function formatDate(date) {
      const options = { day: 'numeric', month: 'short', year: 'numeric', hour: '2-digit', minute: '2-digit' };
      return new Intl.DateTimeFormat('en-US', options).format(date);
    }

    // Get the current date and time
    const currentDate = new Date();

    // Format the current date and time
    const formattedDate = formatDate(currentDate);

    // Set the value of the input element to the formatted date and time
    document.getElementById("deliverdtime").value = formattedDate; 
    
    
    // Update the hidden field with the final count
    document.getElementById("itemCountBadge").value = @count;

    // Display the count wherever needed
    document.getElementById("itemCountBadge").innerText = document.getElementById("itemCountBadge").value;



 function UpdateOrderStatus(OrderId,selectedValue) {
       var tableno = $("#tableno").val();
     var email = $("#Email").val();
       let data = {
           orderId : OrderId,
        Status: selectedValue, 
        DeliverDate:formattedDate,
        Email:email,
        TableId:tableno
    };

    $.post('/Order/UpdateOrderStatus', data)
        .done(function(res) {
            window.location.href = "/Order/NewOrder";
        })
        .fail(function() {
            // Handle the failure case
            alert("Failed to add Dish");
        });
    
}

</script>

