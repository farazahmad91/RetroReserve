@model IEnumerable<Entities.OrdersReport>

@{
    var count = 0;
    string hide;
    ViewData["Title"] = "NewOrder";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>New Order Report</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Order</a></li>
                        <li class="breadcrumb-item active">New Orders</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>
    <div class="container">
        <div class="card">
        <div class="table-responsive">
                <table class="table table-striped" id="NOrder" style="text-align:left;">
                    <thead style="background-color:#17a2b8!important;">
                <tr>
                    <th>Sr No:</th>
                    <th>
                        User Id
                    </th>
                    <th>
                        Dish Name
                    </th>
                    <th>
                        Dish Image
                    </th>
                    <th>
                       Quantity
                    </th>
                    <th>
                        Order Date
                    </th>
                    <th>
                        Status
                    </th>
                </tr>
            </thead>
            <tbody>
                @if (Model == null || !Model.Any())
                            {
                                <tr style="text-align: center;">
                                    <td colspan="12" style="text-align: center;">
                                        <label><strong>Reacord Not Found</strong></label>
                                    </td>
                                </tr>
                            }
                            else
                            {
                @foreach (var item in Model)
                {

                    count++;
                    <tr>
                           <input type="text" hidden id="hdn_@item.OrderID"/>
                          <td>
                           @count
                        </td>
                        <td>
                         
                            @Html.DisplayFor(modelItem => item.UserId)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DishName)
                        </td>
                        <td>
                            <img class="img-fluid rounded-circle" src="@item.DishImage" alt="Dishes" style="width:110px;height:70px;">
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DishQuantity)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.OrderDate)
                        </td>
                        <td>
                                        @{
                                            hide = "";
                                            string colorStyle = "";
                                            string classbadge = "";
                                            if (@item.Status == 0)
                                            {

                                                classbadge = "badge badge-warning";
                                            }
                                            else if (@item.Status == 1)
                                            {
                                                classbadge = "badge badge-primary";
                                }
                                 else if (@item.Status == 3)
                                {
                                  
                                    classbadge = "badge badge-info";
                                }
                                  else if (@item.Status == 4)
                                {
                                  
                                    classbadge = "badge badge-danger";
                                }
                                  else
                                {
                                    
                                      classbadge = "badge badge-primary";
                                }
                            }
                          <input type="datetime-local" hidden id="deliverdtime" />
                           <select id="payment" class="@classbadge" style="colorStyle" asp-for="@item.Status" onchange="UpdateOrderStatus(@item.OrderID,this.value);">
                                            @if (@item.Status == 0)
                                            {
                                                <option value="0" style="display: none;">Disapprove</option>
                                                <option value="1">Approved</option>
                                                <option value="2" style="display: none;">Prepared</option>
                                                <option value="3" style="display: none;">Wait</option>
                                                <option value="4" style="display: none;">Cancelled</option>
                                                <option value="5" style="display: none;">Delivered</option>
                                            }
                                            else if (@item.Status == 1)
                                            {
                                                <option value="0" style="display: none;">Disapprove</option>
                                                <option value="1" style="display: none;">Approved</option>
                                                <option value="2">Prepared</option>
                                                <option value="3" style="display: none;">Wait</option>
                                                <option value="4" style="display: none;">Cancelled</option>
                                                <option value="5" style="display: none;">Delivered</option>
                                            }
                                            else if (@item.Status == 2)
                                            {
                                                <option value="0" style="display: none;">Disapprove</option>
                                                <option value="1" style="display: none;">Approved</option>
                                                <option value="2" style="display: none;">Prepared</option>
                                                <option value="3">Wait</option>
                                                <option value="4">Cancelled</option>
                                                <option value="5">Delivered</option>
                                            }
                                            else if (@item.Status == 3)
                                            {
                                                <option value="0" style="display: none;">Disapprove</option>
                                                <option value="1" style="display: none;">Approved</option>
                                                <option value="2" style="display: none;">Prepared</option>
                                                <option value="3" style="display: none;">Wait</option>
                                                <option value="4">Cancelled</option>
                                                <option value="5">Delivered</option>
                                            }
                                            else if (@item.Status == 4)
                                            {
                                                <option value="0" style="display: none;">Disapprove</option>
                                                <option value="1" style="display: none;">Approved</option>
                                                <option value="2" style="display: none;">Prepared</option>
                                                <option value="3" style="display: none;">Wait</option>
                                                <option value="4">Cancelled</option>
                                                <option value="5" style="display: none;">Delivered</option>
                                            }
                           </select>
                        </td>
                    </tr>
                }}
            </tbody>
        </table>
          </div>
          </div>
    </div>
</div>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<!-- Include DataTables and related plugins -->
<script src="https://cdn.datatables.net/2.0.0/js/dataTables.js"></script>
<script src="https://cdn.datatables.net/buttons/3.0.0/js/dataTables.buttons.js"></script>
<script src="https://cdn.datatables.net/buttons/3.0.0/js/buttons.dataTables.js"></script>

<!-- Include JSZip -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.10.1/jszip.min.js"></script>

<!-- Include PDFMake and related files -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.2.7/pdfmake.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.2.7/vfs_fonts.js"></script>

<!-- Include DataTables Buttons HTML5 and Print buttons -->
<script src="https://cdn.datatables.net/buttons/3.0.0/js/buttons.html5.min.js"></script>
<script src="https://cdn.datatables.net/buttons/3.0.0/js/buttons.print.min.js"></script>

<script>

    new DataTable('#NOrder', {
        layout: {
            topStart: {
                buttons: ['copy', 'csv', 'excel', 'pdf', 'print']
            }
        }
    });
 function UpdateOrderStatus(OrderId,selectedValue) {
       var tableno = $("#tableno").val();
     var email = $("#Email").val();
       let data = {
           orderId : OrderId,
        Status: selectedValue, 
        DeliverDate:formattedDate,
        Email:email,
        TableId:tableno
    };

    $.post('/Order/UpdateOrderStatus', data)
        .done(function(res) {
            window.location.href = "/NewOrder";
        })
        .fail(function() {
            // Handle the failure case
            alert("Failed to add Dish");
        });
    
}

</script>

