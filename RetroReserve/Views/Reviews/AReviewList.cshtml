@model IEnumerable<Entities.AppReviews>

@{
    string classbadge;
    string statustext;
    ViewData["Title"] = "AReviewList";
}


<div class="content-wrapper">
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Reviews</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Menu</a></li>
                        <li class="breadcrumb-item active">Manage Dish Reviews</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>
    <div class="container">
        <div class="card">
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead style="background-color:#17a2b8!important;">
                        <tr>
                            <th>
                                <label>Name</label>
                            </th>
                            <th>
                                <label>Email</label>
                            </th>
                            @*             <th>
                            @Html.DisplayNameFor(model => model.Comment)
                            </th> *@
                            <th>
                                <label>Rating</label>
                            </th>
                            <th>
                                <label>Approved</label>
                            </th>
                            <th>
                                <label>Review Date</label>
                            </th>
                            <th>
                                <label>Action</label>
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.UserID)
                                </td>
                                @*             <td>
                            @Html.DisplayFor(modelItem => item.Comment)
                            </td> *@
                                <td>
                                    @Html.DisplayFor(modelItem => item.Rating)
                                </td>
                                <td>

                                    @{
                                        var stext = "";
                                        var ckb = @item.Status == 0 ? "unchecked" : "checked";
                                        classbadge = "";
                                        var btndisabled = "";
                                        if (@item.Status == 1)
                                        {
                                            classbadge = "badge badge-primary";
                                            stext = "Approve";
                                            btndisabled = "disabled";
                                        }
                                        else
                                        {
                                            classbadge = "badge badge-danger";
                                            stext = "Disapprove";
                                        }
                                    }

                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <div class="custom-control custom-switch custom-switch-off-danger custom-switch-on-success">
                                                <input type="checkbox" class="custom-control-input" id="customSwitch3_@item.AReviewId" onclick="ApprovedAReviews(@item.AReviewId);" @ckb>
                                                <label class="custom-control-label @classbadge" style="color:white;" for="customSwitch3_@item.AReviewId">@stext</label>
                                            </div>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.AReviewDate)
                                </td>
                                <td>
                                    <div class="dropdown">
                                        <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                            Actions
                                        </button>
                                        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                            <a class="dropdown-item" onclick="EmpDetails(@item.AReviewId)"><i class="fas fa-info-circle" style="color: darkgreen"></i> Details</a>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<script>
    function ApprovedAReviews(Id) {
        var id = $("#customSwitch3_" + Id).prop("checked");
        if (id == true) {
            id = 1;
        } else {
            id = 0;
        }
        var param = {
            AReviewId: Id,
            Status: id,
        };
        Swal.fire({
            title: 'Are you sure you want to Approved it?',
            showCancelButton: true,
            confirmButtonColor: '#d33',
            cancelButtonColor: '#3085d6',
            confirmButtonText: 'Yes, Approved it!'
        }).then((result) => {
            if (result.isConfirmed) {
                $.ajax({
                    url: '/Reviews/ApproveAReviewStatus',
                    type: 'POST',
                    data: param,
                    success: function (data) {
                        showinsertsuccess("Review Approved Successfully");
                        window.location.href = "/Reviews/ReviewList";
                    },
                });
            } else {

                showerror("Status Not Approved");
                window.location.href = "/Reviews/ReviewList";
            }
        });
    }
</script>

