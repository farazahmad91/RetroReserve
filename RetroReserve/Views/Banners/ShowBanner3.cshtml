@model IEnumerable<Entities.Banners>
@{
    ViewData["Title"] = "ShowBanner";
    Layout = null;
}

<div class="row g-4 align-items-center">
    <div class="col-lg-6">
        <div class="py-4">
            <h1 class="display-3 text-white">@Model.FirstOrDefault()?.BannerOfferName</h1>
            <p class="fw-normal display-3 text-dark mb-4">in Our Store</p>
            <p class="mb-4 text-dark">@Model.FirstOrDefault()?.Description</p>
            <a href="@Model.FirstOrDefault()?.ProductLink" class="banner-btn btn border-2 border-white rounded-pill text-dark py-3 px-5">BUY</a>
        </div>
    </div>
    <div class="col-lg-6">
        <div class="position-relative">
            <div> <img src="@Model.FirstOrDefault()?.BannerImage" class="img-fluid w-100 rounded" alt=""></div>
            <div class="d-flex align-items-center justify-content-center bg-white rounded-circle position-absolute" style="width: 140px; height: 140px; top: 0; left: 0;">
                <h2> <strong>@Model.FirstOrDefault()?.Offer</strong></h2>
            </div>
        </div>
    </div>
</div>

