@section Scripts {

    <script>
        function OnItemDetail(Id) {
            var Url = "/Category/Itemdetail?Id=" + Id;
            window.location.href = Url;
        }

        function Onload() {

            $.post("/User/MenuKart").done(function (res) {
                $("#MenuPartialView").html(res);
            }).fail(function () {
                alert("errror");
            })
        }
        Onload();

        function ShowBanner() {
            $.post("/Banners/ShowBanner").done(function (res) {
                $("#BannerPartialView").html(res);
            }).fail(function () {
                alert("errror");
            })
        }
        ShowBanner();

        function AddCart(Id) {
            debugger;
            let data = {
                Id: Id,
            };

            $.post('/Cart/AddCart', data)
                .done(function (res) {
                    if (res == -1) {
                        errors("This dish is already in the cart");
                    } else {
                        success("Dish added successfully to your cart.");
                        cartstatus();
                    }
                })
                .fail(function (res) {
                    errors("Kindly log in before adding a dish to your cart.");

                });
        }

        function ViewFoodKart(DishId) {
            let param = {
                DishId: DishId,
            };
            $.post("/Menu/Detail", param).done(function (response) {
                $("#PartialViewprodct").html(response);
                alert(response);
            }).fail(function () {
                alert("errror");
            })
        }

        function GetCategoryValue(DishCategoryId) {
            let data = {
                DishCategoryId: DishCategoryId,
            };

            $.post("/Category/AllDishCategoryList", data)
                .done(function (res) {
                    $("#Menucategory").html(res);
                })
                .fail(function () {
                    alert("error");
                });
        }

        function GetVarientList(DishId) {
            debugger;
            $.post("/Category/MenuQty", { DishId: DishId })
                .done(function (res) {
                    console.log(res);
                    $("#modalVarientPartialView").html(res);
                    $("#MyVarientModal").modal("show");
                })
                .fail(function () {
                    alert("error");
                });
        }
        function TeaKart() {
            $.post("/TeaKart/TeaKartDisplayList").done(function (res) {
                $("#MenuPartialView").html(res);
            }).fail(function () {
                alert("errror");
            })
        }
    </script>
}
